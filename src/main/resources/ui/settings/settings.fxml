<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="700" styleClass="settings-window" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.luciferc137.cmp.ui.settings.SettingsController">

    <!-- Category list on the left -->
    <left>
        <VBox prefWidth="180" styleClass="category-panel">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label styleClass="settings-title" text="Settings" />
            <ListView fx:id="categoryList" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10" />
                </padding>
            </ListView>
        </VBox>
    </left>

    <!-- Main content on the right -->
    <center>
        <StackPane fx:id="contentPane">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Library panel -->
            <VBox fx:id="libraryPane" spacing="15">
                <Label styleClass="section-title" text="Music Library" />

                <Separator />

                <VBox spacing="10">
                    <Label text="Music Folder" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <TextField fx:id="musicFolderField" promptText="Path to music folder..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="browseButton" onAction="#onBrowse" text="Browse..." />
                    </HBox>
                    <Label maxWidth="Infinity" styleClass="hint-text" text="Select the folder containing your audio files." wrapText="true" />
                </VBox>

                <Separator />

                <VBox spacing="10">
                    <Label text="Synchronization" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="resyncButton" onAction="#onResync" styleClass="primary-button" text="Resync" />
                    </HBox>
                    <Label alignment="TOP_CENTER" maxWidth="Infinity" styleClass="hint-text" text="Synchronization scans the folder and updates the library with metadata from audio files." wrapText="true" />
                    <ProgressBar fx:id="syncProgressBar" maxWidth="Infinity" prefWidth="400" visible="false" />
                    <Label fx:id="syncStatusLabel" maxWidth="Infinity" styleClass="status-text" wrapText="true" />
                </VBox>

                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Playlists panel -->
            <VBox fx:id="playlistsPane" spacing="15" visible="false" managed="false">
                <Label styleClass="section-title" text="Playlists Management" />

                <Separator />

                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label text="Your Playlists" />
                    <ListView fx:id="playlistListView" VBox.vgrow="ALWAYS" prefHeight="200" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="createPlaylistButton" onAction="#onCreatePlaylist" styleClass="primary-button" text="Create Playlist" />
                        <Button fx:id="deletePlaylistButton" onAction="#onDeletePlaylists" text="Delete Selected" />
                    </HBox>
                    <Label maxWidth="Infinity" styleClass="hint-text" text="Select one or more playlists to delete. Use Ctrl+Click for multiple selection." wrapText="true" />
                </VBox>

                <Separator />

                <VBox spacing="10">
                    <Label text="Import AIMP Playlists" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="importAimpButton" onAction="#onImportAimpPlaylist" styleClass="primary-button" text="Import..." />
                    </HBox>
                    <Label maxWidth="Infinity" styleClass="hint-text" text="Import playlists from AIMP (.xspf and .aimppl4 formats). Automatically converts Windows paths to Linux paths." wrapText="true" />
                    <Label fx:id="importStatusLabel" maxWidth="Infinity" styleClass="status-text" wrapText="true" />
                </VBox>

                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS" />
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom buttons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="20" right="20" top="10" />
            </padding>
            <Button onAction="#onClose" prefWidth="100" text="Close" />
        </HBox>
    </bottom>
</BorderPane>
