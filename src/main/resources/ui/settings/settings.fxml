<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.luciferc137.cmp.ui.settings.SettingsController"
            prefWidth="650" prefHeight="450"
            styleClass="settings-window">

    <!-- Category list on the left -->
    <left>
        <VBox prefWidth="180" styleClass="category-panel">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Settings" styleClass="settings-title"/>
            <ListView fx:id="categoryList" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10"/>
                </padding>
            </ListView>
        </VBox>
    </left>

    <!-- Main content on the right -->
    <center>
        <StackPane fx:id="contentPane">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Library panel -->
            <VBox fx:id="libraryPane" spacing="15" alignment="TOP_LEFT">
                <Label text="Music Library" styleClass="section-title"/>

                <Separator/>

                <VBox spacing="10">
                    <Label text="Music Folder"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="musicFolderField"
                                   promptText="Path to music folder..."
                                   HBox.hgrow="ALWAYS"
                                   editable="true"/>
                        <Button fx:id="browseButton"
                                text="Browse..."
                                onAction="#onBrowse"/>
                    </HBox>
                    <Label text="Select the folder containing your audio files."
                           styleClass="hint-text"
                           wrapText="true"
                           maxWidth="Infinity"/>
                </VBox>

                <Separator/>

                <VBox spacing="10">
                    <Label text="Synchronization"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="resyncButton"
                                text="Resync"
                                onAction="#onResync"
                                styleClass="primary-button"/>
                    </HBox>
                    <ProgressBar fx:id="syncProgressBar"
                                 prefWidth="400"
                                 maxWidth="Infinity"
                                 visible="false"/>
                    <Label fx:id="syncStatusLabel"
                           styleClass="status-text"
                           wrapText="true"
                           maxWidth="Infinity"/>
                    <Label text="Synchronization scans the folder and updates the library with metadata from audio files."
                           styleClass="hint-text"
                           wrapText="true"
                           maxWidth="Infinity"/>
                </VBox>

                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom buttons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="15" left="20"/>
            </padding>
            <Button text="Close" onAction="#onClose" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>

